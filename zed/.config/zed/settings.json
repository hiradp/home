// Hirad's Zed settings
{
  // Vim related settings
  "vim_mode": true,
  "relative_line_numbers": true,

  // Zed related settings
  "auto_install_extensions": {
    "basher": true,
    "dockerfile": true,
    "docker-compose": true,
    "fish": true,
    "lua": true,
    "proto": true,
    "toml": true
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // UI
  "active_pane_modifiers": {
    "inactive_opacity": 0.9
  },
  "agent_font_size": 12,
  "buffer_font_size": 10,
  "buffer_font_family": "Berkeley Mono",
  "current_line_highlight": "gutter",
  "minimap": {
    "show": "auto",
    "thumb": "hover",
    "thumb_border": "full",
    "current_line_highlight": null
  },
  "show_whitespaces": "boundary",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "all"
  },
  "theme": {
    "mode": "system",
    "dark": "Ayu Dark",
    "light": "One Light"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "ui_font_size": 12,
  "unnecessary_code_fade": 0.5,

  // Panels
  "agent": {
    "dock": "left"
  },
  "collaboration_panel": {
    "button": false
  },
  "debugger": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "project_panel": {
    "dock": "right"
  },
  "terminal": {
    "cursor_shape": "hollow",
    "dock": "left",
    "shell": {
      "with_arguments": {
        "program": "/opt/homebrew/bin/fish",
        "args": ["--login"]
      }
    }
  },

  // Coding Language Servers
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  }
}
