// Hirad's Zed settings
{
  // Vim related settings
  "vim_mode": true,
  "relative_line_numbers": true,

  // Zed related settings
  "features": {
    "edit_prediction_provider": "zed"
  },

  // UI
  "active_pane_modifiers": {
    "inactive_opacity": 0.65
  },
  "agent_font_size": 12,
  "buffer_font_size": 10,
  "buffer_font_family": "Berkeley Mono",
  "show_whitespaces": "boundary",
  "theme": {
    "mode": "system",
    "dark": "Gruvbox Dark Hard",
    "light": "Gruvbox Light Soft"
  },
  "ui_font_size": 12,

  // Panels
  "agent": {
    "dock": "left"
  },
  "collaboration_panel": {
    "button": false
  },
  "debugger": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "project_panel": {
    "dock": "right"
  },
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "/opt/homebrew/bin/fish",
        "args": ["--login"]
      }
    }
  }
}
